<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.eugene.sumarry.mybatis.dao.UserDao1">

    <!-- 有xml的话, 在dao上添加@CacheNamespace注解会无效, 需要在这里添加 <cache /> 标签 -->
    <cache />

    <resultMap type="User" id="userMap">
        <id column="user_id" property="userId"/>
        <result column="user_name" property="userName"/>
        <result column="password" property="password"/>
    </resultMap>

    <sql id="fields">
        user_id, user_name, password
    </sql>

    <select id="list" parameterType="map" resultMap="userMap">
        SELECT
        <include refid="fields"/>
        FROM user

    </select>
    <update id="update" parameterType="User" >
        UPDATE user SET user_name = 'eugene11111' WHERE user_id = 1
    </update>

</mapper>